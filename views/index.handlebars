<h1>Krusty Burger</h1>

<h2>Order up!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> devour-button devour=true}}
        {{/unless}}
    {{!-- <li>
        <p>
            {{this.id}}. {{this.burger_name}}
        </p>
    </li> --}}
    {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> devour-button devour=false}}
        {{/if}}
    {{/each}}
</ul>

{{!-- <ul>
    {{#each burger}}

</ul> --}}

<h2>Add a burger!</h2>

<form class="adda-burger">

    <div class="form-group">
        <label for="burger-name">Burger Name:</label>
        <input type="text" id="burger-name" name="name">
        <button type="submit">Add Burger</button>
    </div>
    
    
</form>